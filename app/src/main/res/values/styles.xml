<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleTextStyle">
        <item name="fontFamily">Montserrat</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#808080</item>
        <item name="lineHeight">36dp</item>
    </style>

    <style name="SubtitleTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="currency_amount_text">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">Montserrat</item>
        <item name="lineHeight">26sp</item>
    </style>

    <style name="edit_currency_field">
        <item name="android:layout_width">307dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#1789DB</item>
    </style>

    <style name="tvCurrencyName">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">Montserrat</item>
        <item name="lineHeight">26sp</item>
    </style>

    <style name="add_currency_button">
        <item name="android:layout_width">169dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="backgroundTint">#F5F5F5</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">Montserrat</item>
        <item name="android:textSize">22sp</item>
        <item name="lineHeight">26sp</item>
    </style>

    <style name="bottom_sheet_button">
        <item name="android:layout_width">214dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:radius">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="backgroundTint">#1789DB</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">Montserrat</item>
        <item name="android:textSize">22sp</item>
        <item name="lineHeight">26sp</item>
    </style>

    <style name="delete_dialog_button">
        <item name="android:layout_width">121dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="backgroundTint">#F5F5F5</item>
        <item name="android:textColor">#000000</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">Montserrat</item>
        <item name="fontWeight">300</item>
        <item name="android:textSize">19sp</item>
        <item name="lineHeight">26sp</item>
    </style>

    <style name="delete_dialog_text">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">Montserrat</item>
        <item name="fontWeight">500</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="pin_code_text">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/pin_enter_text</item>
        <item name="fontFamily">Montserrat</item>
        <item name="lineHeight">36sp</item>
    </style>

    <style name="pin_button">
        <item name="android:layout_width">83dp</item>
        <item name="android:layout_height">63dp</item>
        <item name="backgroundTint">@color/pin_button_background</item>
        <item name="android:textColor">@color/pin_button_text</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/pin_button_border</item>
        <item name="fontFamily">Montserrat</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">36sp</item>
    </style>

    <style name="personal_page_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/pin_button_background</item>
        <item name="android:textColor">@color/pin_button_text</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/pin_button_border</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">26sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="personal_page_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/personal_page_text</item>
        <item name="fontFamily">Montserrat</item>
        <item name="lineHeight">36sp</item>
    </style>

    <style name="ChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/search_chip_background_selected</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">#000000</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="chipCornerRadius">8dp</item>
    </style>

    <style name="TabTextStyle">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabTextColor">#000000</item>
        <item name="tabSelectedTextColor">#000000</item>
        <item name="fontFamily">Montserrat</item>
        <item name="fontWeight">500</item>
        <item name="lineHeight">36dp</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="statistics_tab_text">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">36dp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">Montserrat</item>
        <item name="fontWeight">300</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="one_more_tab_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">Montserrat</item>
        <item name="fontWeight">300</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>
</resources>